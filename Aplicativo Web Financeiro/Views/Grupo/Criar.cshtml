@model Domain.Models.Grupo

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Grupo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CriadoEm" />
            <input type="hidden" asp-for="AtualizadoEm" />
            <input type="hidden" asp-for="Usuario" />
            <input type="hidden" asp-for="Status" />
            <div class="form-group">
                <label asp-for="CodigoGrupo" class="control-label"></label>
                <input asp-for="CodigoGrupo" class="form-control" />
                <span asp-validation-for="CodigoGrupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listar">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
