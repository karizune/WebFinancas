@model Domain.Models.Usuario

@{
    ViewData["Title"] = "Cadastro";
}
<center>
    <h1>Cadastro de usuário</h1>
    <hr />
    <div style="max-width:250px">
        <div class="form-group">
            <input type="text" class="form-control" id="NomeUsuario" placeholder="Nome completo" />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="UsuarioAcesso" placeholder="Nome de usuario" />
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="Senha" placeholder="Senha" />
        </div>
        <div class="form-group">
            <button class="btn btn-outline-primary" id="btn-confirmCadastro" >Cadastrar</button>
        </div>
    </div>
</center>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    $('#btn-confirmCadastro').on('click', function (e) {
        e.preventDefault();

        var data = {
            NomeUsuario: $('#NomeUsuario').val(),
            UsuarioAcesso: $('#UsuarioAcesso').val(),
            Senha: $('#Senha').val()
        }


        $.ajax({
            data: data,
            url: "@Url.Action("CadastroConfirm", "Home")",
            type: "POST"
        });

        e.stopImmediatePropagation();
    })
</script>